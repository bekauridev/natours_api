header.header
    nav.nav.nav--tours
        .header__logo
            a(href="/")
                img(src="/img/logo-white.png" alt="Natours logo")

        //- Hamburger Menu Icon
        .hamburger
            span
            span
            span

        //- Navigation Links
        div.nav_row.row 
            //- a.nav__el(href="/") All tours
            if user 
                a.nav__el.nav__el--logout Log out
                a.nav__el(href="/") All tours
                a.nav__el(href="/me")
                    img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}` class="nav__user-img")
                    span #{user.name.split(' ')[0]}
            else
                a.nav__el(href="/") All tours
                a.nav__el(href='/login') Log in
                a.nav__el.nav__el--cta(href='/signup') Sign up



